<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Pick Up a game</h3>
        <%= simple_form_for @user_game do |f| %>
          <%= f.association :game, placeholder: 'Your game list title' %>
          <%= f.input :renting_price %>
          <%= f.input :renting_deposit %>
          <%= f.submit class: 'btn btn-primary' %>
          <%  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
